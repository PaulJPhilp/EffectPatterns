{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "complexity": {
        "noForEach": "warn",
        "noUselessFragments": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useAnchorContent": "off",
        "useButtonType": "off"
      },
      "style": {
        "noCommonJs": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "files": {
    "includes": [
      "packages/!(*/dist)/**/*.ts",
      "scripts/**/*.ts",
      "content/src/**/*.ts"
    ]
  }
}