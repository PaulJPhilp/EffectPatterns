{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/__tests__/**",
    "**/*.test.ts",
    "scripts/**",
    "**/*.spec.ts",
    "node_modules/**"
  ]
}
