{
  "version": 2,
  "installCommand": "bun install",
  "buildCommand": "cd packages/toolkit && bun run build",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.ts"
    },
    {
      "src": "/health",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/v1/rules",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/v1/rules/(.*)",
      "dest": "/api/index.ts"
    }
  ]
}
