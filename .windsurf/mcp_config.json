{
  "mcpServers": {
    "next-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ]
    },
    "effect-patterns": {
      "command": "bun",
      "args": [
        "run",
        "--cwd",
        "packages/mcp-server",
        "dist/mcp-stdio.js"
      ],
      "env": {
        "PATTERN_API_KEY": "${PRODUCTION_API_KEY}",
        "EFFECT_PATTERNS_API_URL": "https://effect-patterns-mcp.vercel.app"
      }
    },
    "effect-docs": {
      "command": "npx",
      "args": [
        "-y",
        "effect-mcp"
      ]
    }
  }
}