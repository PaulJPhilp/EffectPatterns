{
  "mcpServers": {
    "next-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ]
    },
    "effect-patterns": {
      "command": "bun",
      "args": [
        "--cwd",
        "packages/mcp-server",
        "dist/mcp-stdio.js"
      ],
      "disabled": false,
      "env": {
        "EFFECT_PATTERNS_API_URL": "http://localhost:3000",
        "MCP_ENV": "local",
        "MCP_DEBUG": "false"
      }
    },
    "effect-docs": {
      "command": "npx",
      "args": [
        "-y",
        "effect-mcp"
      ]
    }
  }
}
