{
  "name": "@effect-patterns/ep-cli",
  "version": "0.3.2",
  "description": "End-user CLI for Effect Patterns Hub",
  "private": false,
  "type": "module",
  "bin": {
    "ep": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "preflight": "bun run build && bun run typecheck && bun run test",
    "smoke-test": "bun run build && node dist/index.js --version",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@effect-patterns/ep-shared-services": "workspace:*",
    "@effect-patterns/toolkit": "workspace:*",
    "@effect/cli": "0.73.2",
    "@effect/platform": "0.94.5",
    "@effect/cluster": "0.56.4",
    "@effect/platform-node": "0.104.1",
    "@effect/rpc": "0.73.2",
    "@effect/sql": "0.49.0",
    "effect": "3.19.19",
    "effect-cli-tui": "^2.2.0",
    "effect-env": "^0.4.1"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!dist/test",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulJPhilp/Effect-Patterns.git",
    "directory": "packages/ep-cli"
  },
  "bugs": {
    "url": "https://github.com/PaulJPhilp/Effect-Patterns/issues"
  },
  "homepage": "https://github.com/PaulJPhilp/Effect-Patterns#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "effect",
    "effect-ts",
    "cli",
    "patterns",
    "code-generation",
    "typescript"
  ]
}
